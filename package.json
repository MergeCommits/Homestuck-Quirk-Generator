{
    "name": "homestuck-quirk-generator",
    "version": "5.0.0",
    "description": "A site that allows you to convert inputted text into the typing quirk of a Homestuck character.",
    "repository": {
        "type": "git",
        "url": "git+https://MergeCommits@github.com/MergeCommits/Homestuck-Quirk-Generator.git"
    },
    "homepage": "https://homestuck-quirks.web.app/",
    "bugs": {
        "url": "https://github.com/MergeCommits/Homestuck-Quirk-Generator/issues"
    },
    "author": "Mark Jarjour",
    "license": "SEE LICENSE IN LICENSE.md",
    "scripts": {
        "build": "yarn lint --max-warnings 0 && yarn type-check && vite build",
        "dev": "vite",
        "lint": "eslint \"src/**/*{.ts,.tsx}\"",
        "postinstall": "cp .gitignore .prettierignore",
        "prepare": "husky install",
        "type-check": "tsc --skipLibCheck --noEmit"
    },
    "dependencies": {
        "@babel/core": "^7.0.0",
        "@emotion/react": "^11.4.0",
        "@emotion/styled": "^11.3.0",
        "@fontsource/roboto": "^5.0.3",
        "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
        "@mui/icons-material": "^5.8.0",
        "@mui/material": "^5.8.0",
        "@nabla/vite-plugin-eslint": "^1.4.0",
        "@tsconfig/vite-react": "^2.0.0",
        "@types/node": "^20.3.0",
        "@types/react": "^18.0.28",
        "@types/react-dom": "^18.0.10",
        "@typescript-eslint/eslint-plugin": "^5.47.1",
        "@typescript-eslint/parser": "^5.47.1",
        "@vitejs/plugin-react": "^4.0.0",
        "eslint": "^8.30.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-no-relative-import-paths": "^1.4.0",
        "eslint-plugin-react": "^7.31.10",
        "eslint-plugin-react-hooks": "^4.6.0",
        "husky": ">=6",
        "lint-staged": ">=10",
        "prettier": "^2.7.1",
        "prettier-plugin-pkg": "^0.17.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "typescript": "^5.0.4",
        "vite": "^4.1.1",
        "vite-plugin-svgr": "^3.2.0",
        "vite-tsconfig-paths": "^4.0.5"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "lint-staged": {
        "*.{ts,tsx}": "eslint --cache --fix",
        "*.{ts,tsx,css,json,md}": "prettier --write"
    }
}
